// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  slug        String    @unique
  description String?
  products    Product[]
  fields      ProductField[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([slug])
  @@map("categories")
}

model Product {
  id              String   @id @default(cuid())
  productName     String
  priceWholesale  Decimal  @db.Decimal(10, 2)
  priceDrop       Decimal  @db.Decimal(10, 2)
  description     String   @db.Text
  googleDriveUrl  String?
  
  // Dynamic fields stored as JSON
  extraFields     Json?
  
  // Relations
  category        Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId      String
  
  // Metadata
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([categoryId])
  @@index([productName])
  @@index([isActive])
  @@map("products")
}

model ProductField {
  id          String   @id @default(cuid())
  key         String
  label       String
  type        FieldType @default(TEXT)
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  order       Int      @default(0)
  createdAt   DateTime @default(now())

  @@unique([categoryId, key])
  @@index([categoryId])
  @@map("product_fields")
}

enum FieldType {
  TEXT
  NUMBER
  PRICE
  URL
  DATE
}